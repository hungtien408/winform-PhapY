        <Label FontWeight="Normal" Content="hh" Background="White" x:Name="lblHours" Foreground="#999" VerticalContentAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="30" />
        <TextBox x:Name="txtHours" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="30" MaxLength="2" KeyDown="txtHours_KeyDown" GotFocus="txtHours_GotFocus" LostFocus="txtHours_LostFocus" />
        <Label Content="giờ" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Stretch" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Width="35" />
        <Label FontWeight="Normal" Content="mm" Foreground="#999" Background="White" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Name="lblMinutes" VerticalContentAlignment="Center" Width="30" Margin="63,0,0,0" />
        <TextBox  GotFocus="txtMinutes_GotFocus" HorizontalAlignment="Left" KeyDown="txtMinutes_KeyDown" LostFocus="txtMinutes_LostFocus" MaxLength="2" Name="txtMinutes" VerticalAlignment="Stretch" Width="30" Margin="63,0,0,0" />
        <Label Content="phút" HorizontalAlignment="Left" Margin="99,0,0,0" VerticalAlignment="Stretch" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" />
    </Grid>
</UserControl>
